{
  "name": "training-platform",
  "version": "1.0.0",
  "description": "Plataforma de treinamento online com autenticação e níveis de acesso",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
